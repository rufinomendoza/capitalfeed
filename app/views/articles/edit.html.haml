%h1 Edit article
= form_for(@article) do |f|
  -if @article.errors.any?
    .error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        -@article.errors.full_messages.each do |msg|
          %li= msg  
  %h6
    = f.label :name
    = f.text_field :name
  %br
  %h6
    = f.label :published_at
    = f.text_field :published_at
  %br
  %h6
    = f.label :summary
    = f.text_area :summary, rows: 5
  %br
  %h6
    = f.label :content
    = f.text_area :content
  %br
  %h6
    = f.label :category
    = f.text_field :category
  %br
  %h6
    = f.label :tag_list, "Tags (separated by commas)"
    = f.text_field :tag_list
  %br
  %p
    = f.submit
  %br
%p= link_to "Summary", article_path(@article), class: 'btn btn-small'
%h6 Back to:
= link_to 'Musings', root_path, class: "btn btn-small"
= link_to 'Top News', top_news_path, class: "btn btn-small"
= link_to 'Wires', wires_path, class: "btn btn-small"