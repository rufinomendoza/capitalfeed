<h1>Top News</h1>
<% if @top_articles.blank? %>
  <p>There is no top news today. Enjoy!</p>
  <p><b>For previous top news, please visit <a href="http://experimental.capitalmusings.com/top_news" target="_blank">our site</a>.</b></p>
<% else %>
<!-- One Article -->
  <% if @top_articles.class == Article %>
      <% unless @top_articles.published_at.nil? %>
        <h3><%= @top_articles.name %></h3>
        <p><%= @top_articles.published_at.localtime.strftime("%A, %B #{@top_articles.published_at.localtime.day.ordinalize}, %Y, %-I:%M #{@top_articles.published_at.localtime.strftime("%P").split(//).join('.') + '.'} %Z") %></p>
          <p><%= sanitize @top_articles.summary %></p>
          <p><%= link_to "Read more »", @top_articles.url, :target => '_blank' %></p>
        <br />
      <% end %>
<!-- /One Article -->
<!-- Multiple Articles -->
  <% else %>
    <% for top_entry in @top_articles %>
      <% unless top_entry.published_at.nil? %>
        <h3><%= top_entry.name %></h3>
        <p><%= top_entry.published_at.localtime.strftime("%A, %B #{top_entry.published_at.localtime.day.ordinalize}, %Y, %-I:%M #{top_entry.published_at.localtime.strftime("%P").split(//).join('.') + '.'} %Z") %></p>
          <p><%= sanitize top_entry.summary %></p>
          <p><%= link_to "Read more »", top_entry.url, :target => '_blank' %></p>
        <br />
      <% end %>
    <% end %>
<!-- /Multiple Articles -->
  <% end %>
  <p><b>For more top news, please visit <a href="http://experimental.capitalmusings.com/top_news" target="_blank">our site</a>.</b></p>
<% end %>

<hr>

<h1>Wires</h1>
<% if @wire_articles.blank? %>
  <p>There is no wire news today. Enjoy!</p>
  <p><b>For previous wire news, please visit <a href="http://experimental.capitalmusings.com/wires" target="_blank">our site</a>.</b></p>
<% else %>
<h3>Recent News</h3>
<!-- One Article -->
  <% if @wire_articles.class == Article %>
    <table class='table'>
      <tbody>
        <tr>
          <td><%= @wire_articles.published_at.localtime.strftime("%D %H:%M %Z") %></td>
          <td><%= link_to @wire_articles.name, @wire_articles.url, :target => '_blank' %></td>
        </tr>
      </tbody>
    </table>
<!-- /One Article -->
<!-- Multiple Articles -->
  <% else %>
    <table class='table'>
      <tbody>
      <% for wire_entry in @wire_articles %>
        <tr>
          <td><%= wire_entry.published_at.localtime.strftime("%D %H:%M %Z") %></td>
          <td><%= link_to wire_entry.name, wire_entry.url, :target => '_blank' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
<!-- /Multiple Articles -->
  <% end %>
  <p><b>For the latest wire news, please visit <a href="http://experimental.capitalmusings.com/wires" target="_blank">our site</a>.</b></p>
<% end %>

